  <!-- i18n dictionary -->
  <script src="/legal/i18n/strings.js?v=20250918"></script>

  <!-- Robust i18n hydrator with per-field fallback -->
  <script>
    (() => {
      const page = (document.body.getAttribute("data-page") || "").toLowerCase();

      // Resolve language from ?lang=, then stored, then browser
      const pickLang = () => {
        const q = new URLSearchParams(location.search);
        const stored = localStorage.getItem("pref.lang") || localStorage.getItem("site:lang");
        const two = String(q.get("lang") || stored || navigator.language || "en").slice(0, 2).toLowerCase();
        if (q.get("lang")) { try { localStorage.setItem("pref.lang", two); localStorage.setItem("site:lang", two); } catch { } }
        return (window.LEGAL_DICT && window.LEGAL_DICT[two]) ? two : "en";
      };

      const lang = pickLang();
      document.documentElement.lang = lang;

      const get = (path) => {
        const pick = (obj, p) => p.split(".").reduce((o, k) => o && o[k], obj || {});
        const loc = pick(window.LEGAL_DICT?.[lang]?.[page], path);
        if (typeof loc === "string" && loc.trim() !== "") return loc;
        const en = pick(window.LEGAL_DICT?.en?.[page], path);
        return (typeof en === "string") ? en : "";
      };

      // Fill text nodes
      document.querySelectorAll("[data-i18n]").forEach(el => {
        const key = el.dataset.i18n;
        el.textContent = get(key);
      });

      // Fill lists with array fallback
      document.querySelectorAll("[data-i18n-list]").forEach(el => {
        const path = el.dataset.i18nList;
        const pick = (obj, p) => p.split(".").reduce((o, k) => o && o[k], obj || {});
        const arr = pick(window.LEGAL_DICT?.[lang]?.[page], path)
          || pick(window.LEGAL_DICT?.en?.[page], path)
          || [];
        if (Array.isArray(arr)) el.innerHTML = arr.map(s => `<li>${s}</li>`).join("");
      });

      // UI bits
      const ui = window.LEGAL_UI?.[lang] || window.LEGAL_UI?.en || { back: "Back to Home", updated: "Last updated" };
      const lab = document.getElementById("updated-label"); if (lab) lab.textContent = ui.updated + ":";
      const back = document.querySelector("#back-home [data-label]"); if (back) back.textContent = " " + ui.back;

      const d = document.getElementById("updated-date"); if (d) d.textContent = new Date().toISOString().slice(0, 10);
      const y = document.getElementById("year"); if (y) y.textContent = new Date().getFullYear();
    })();
  </script>
