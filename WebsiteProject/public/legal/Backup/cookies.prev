  <!-- Load the dictionaries -->
  <script src="/legal/i18n/strings.js?v=20250918"></script>

  <!-- Lightweight hydrator (works with LEGAL_UI + LEGAL_DICT) -->
  <script>
    (() => {
      "use strict";
      const pickLang = () => {
        const q = new URLSearchParams(location.search);
        const stored = localStorage.getItem("pref.lang") || localStorage.getItem("site:lang");
        const raw = (q.get("lang") || stored || navigator.language || "en").toLowerCase();
        const two = raw.slice(0, 2);
        if (q.get("lang")) { try { localStorage.setItem("pref.lang", two); } catch (e) { } }
        return two;
      };
      const getPath = (obj, path) => path.split(".").reduce((o, k) => (o && o[k] != null ? o[k] : undefined), obj);

      function fill() {
        if (!window.LEGAL_DICT) { console.error("LEGAL_DICT missing"); return; }
        const lang0 = pickLang();
        const lang = window.LEGAL_DICT[lang0] ? lang0 : "en";
        document.documentElement.lang = lang;

        const page = (document.body.getAttribute("data-page") || "").toLowerCase(); // "cookies"
        const dict = (window.LEGAL_DICT[lang] && window.LEGAL_DICT[lang][page]) || (window.LEGAL_DICT.en && window.LEGAL_DICT.en[page]) || {};
        const ui = (window.LEGAL_UI && (window.LEGAL_UI[lang] || window.LEGAL_UI.en)) || { back: "Back to Home", updated: "Last updated" };

        // Title tag + H1
        if (dict.title) {
          const h1 = document.querySelector('[data-i18n="title"]');
          if (h1) h1.textContent = dict.title;
          const titleTag = document.querySelector("title");
          if (titleTag) titleTag.textContent = dict.title + " | DEVOCEAN Lodge";
        }

        // Back + Updated labels
        const backLbl = document.querySelector("#back-home [data-label]"); if (backLbl) backLbl.textContent = " " + ui.back;
        const updLbl = document.getElementById("updated-label"); if (updLbl) updLbl.textContent = ui.updated;
        const dEl = document.getElementById("updated-date"); if (dEl) dEl.textContent = new Date().toISOString().slice(0, 10);
        const y = document.getElementById("year"); if (y) y.textContent = new Date().getFullYear();

        // Single-value fields (strings)
        document.querySelectorAll("[data-i18n]").forEach(el => {
          const key = el.getAttribute("data-i18n");
          if (key === "title") return; // handled above
          const val = getPath(dict, key);
          if (typeof val === "string" && val.trim() !== "") { el.textContent = val; }
        });

        // Lists
        document.querySelectorAll("[data-i18n-list]").forEach(el => {
          const key = el.getAttribute("data-i18n-list");
          const arr = getPath(dict, key);
          if (Array.isArray(arr)) {
            el.innerHTML = arr.map(item => `<li>${String(item)}</li>`).join("");
          }
        });
      }

      if (document.readyState === "loading") { document.addEventListener("DOMContentLoaded", fill); }
      else { fill(); }
    })();
  </script>
